{
    "name": "hidefiles",
    "displayName": "Hide Files",
    "description": "User configurable profiles that hide certain files.",
    "version": "1.1.2",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.58.1"
    },
    "categories": [
        "Other",
        "Visualization"
    ],
    "activationEvents": [
        "onView:hidden-files",
        "onCommand:hidefiles.reloadConfig",
        "onCommand:hidefiles.createConfig",
        "onCommand:hidefiles.deactivate"
    ],
    "keywords": [
        "Files",
        "Hidefiles",
        "Hide"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "hidden-files",
                    "name": "Hidden files"
                }
            ]
        },
        "menus": {
            "explorer/context": [
                {
                    "command": "hidefiles.hidefile",
                    "group": "5_cutcopypaste@1000"
                }
            ],
            "view/title": [
                {
                    "command": "hidefiles.hiddenfiles.refresh",
                    "when": "view == hidden-files",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "hidefiles.hidefile",
                    "when": "false"
                }
            ],
            "view/item/context": [
                {
                    "command": "hidefiles.tree.peek",
                    "when": "viewItem == hidefiles.file",
                    "group": "inline"
                },
                {
                    "command": "hidefiles.tree.peek.undo",
                    "when": "viewItem == hidefiles.file.visible",
                    "group": "inline"
                },
                {
                    "command": "hidefiles.tree.remove",
                    "when": "viewItem == hidefiles.file || viewItem == hidefiles.file.visible",
                    "group": "inline"
                },
                {
                    "command": "hidefiles.subprofile.remove",
                    "when": "viewItem == hidefiles.subprofile",
                    "group": "inline"
                },
                {
                    "command": "hidefiles.tree.profile.activate",
                    "when": "viewItem == hidefiles.profile.inactive || viewItem == hidefiles.profile.showall",
                    "group": "inline"
                },
                {
                    "command": "hidefiles.tree.profile.add",
                    "when": "viewItem == hidefiles.profile.active || viewItem == hidefiles.profile.inactive",
                    "group": "inline"
                }
            ]
        },
        "commands": [
            {
                "command": "hidefiles.reloadConfig",
                "title": "Hide Files: Reload Profile"
            },
            {
                "command": "hidefiles.createConfig",
                "title": "Hide Files: Create Config"
            },
            {
                "command": "hidefiles.deactivate",
                "title": "Hide Files: Deactivate"
            },
            {
                "command": "hidefiles.hidefile",
                "title": "Hide File"
            },
            {
                "command": "hidefiles.hiddenfiles.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "hidefiles.tree.peek.undo",
                "title": "Hide",
                "icon": "$(eye-closed)"
            },
            {
                "command": "hidefiles.tree.peek",
                "title": "Peek",
                "icon": "$(eye)"
            },
            {
                "command": "hidefiles.tree.remove",
                "title": "Remove",
                "icon": "$(trash)"
            },
            {
                "command": "hidefiles.subprofile.remove",
                "title": "Remove",
                "icon": "$(trash)"
            },
            {
                "command": "hidefiles.tree.profile.activate",
                "title": "Activate",
                "icon": "$(eye)"
            },
            {
                "command": "hidefiles.tree.profile.add",
                "title": "Add",
                "icon": "$(add)"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "%configuration.title%",
            "properties": {
                "hidefiles.globalConfig": {
                    "type": "object",
                    "default": {
                        "profiles": [
                            {
                                "name": "Default",
                                "detail": "Hides annoying folders",
                                "description": "Test",
                                "hidden": [
                                    ".vscode/"
                                ]
                            },
                            {
                                "name": "Strict",
                                "detail": "Hide everything not immediately required",
                                "hidden": [
                                    "$Default"
                                ]
                            }
                        ]
                    },
                    "description": "The default order level of everything which is not included into rules"
                },
                "hidefiles.selectedProfile": {
                    "type": "string",
                    "description": "The selected profile"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^8.2.3",
        "@types/node": "^14.17.5",
        "@types/vscode": "^1.58.1",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "eslint": "^7.31.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.5",
        "vscode-test": "^1.6.1"
    },
    "publisher": "JeremyFunk",
    "repository": {
        "url": "https://github.com/JeremyFunk/hidefiles"
    }
}
