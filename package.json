{
  "name": "hidefiles",
  "displayName": "Hide Files",
  "description": "User configurable profiles that hide certain files.",
  "version": "1.0.1",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.58.1"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onCommand:hidefiles.reloadConfig",
    "onCommand:hidefiles.createConfig",
    "onCommand:hidefiles.openGlobalConfig"
  ],
  "keywords": [
    "Files",
    "Hidefiles",
    "Hide"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hidefiles.reloadConfig",
        "title": "Hide Files: Reload Config"
      },
      {
        "command": "hidefiles.createConfig",
        "title": "Hide Files: Create Config"
      },
      {
        "command": "hidefiles.openGlobalConfig",
        "title": "Hide Files: Open Global Config"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "%configuration.title%",
      "properties": {
        "hidefiles.globalConfig": {
          "type": "object",
          "default": {
            "profiles": [
              {
                "name": "Default",
                "detail": "Hides annoying folders",
                "description": "Test",
                "hidden": [
                  ".vscode/"
                ]
              },
              {
                "name": "Strict",
                "detail": "Hide everything not immediately required",
                "hidden": [
                  "$Default"
                ]
              }
            ]
          },
          "description": "The default order level of everything which is not included into rules"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.17.5",
    "@types/vscode": "^1.58.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.5",
    "vscode-test": "^1.6.1"
  },
  "publisher": "JeremyFunk",
  "repository": {
    "url": "https://github.com/JeremyFunk/hidefiles"
  }
}
